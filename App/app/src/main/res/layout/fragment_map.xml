<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.commons.fragments.mapfragment.MapFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_search"
        style="@style/mapFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_search_black"
        app:backgroundTint="@color/colorPrimaryLight" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_my_location"
        style="@style/mapFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_round_my_location"
        app:backgroundTint="@color/colorPrimaryLight"
        app:layout_anchor="@id/fab_gap"
        app:layout_anchorGravity="top|end" />

    <View
        android:id="@+id/fab_gap"
        android:layout_width="0dp"
        android:layout_height="@dimen/fab_margin"
        android:layout_gravity="end"
        app:layout_anchor="@id/fab_accesibility"
        app:layout_anchorGravity="top|end" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_accesibility"
        style="@style/mapFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_round_accessible_forward"
        app:backgroundTint="@color/colorPrimaryLight" />

</android.support.design.widget.CoordinatorLayout>
