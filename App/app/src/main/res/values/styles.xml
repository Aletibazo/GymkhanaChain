<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PrimaryTitle" >
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Description" >
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="PrefIcon" >
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="mapFAB" >
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
    </style>

    <style name="fab" >
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="drawerHeaderText" >
        <item name="android:textColor">@color/colorSecondaryLight</item>
    </style>

</resources>
