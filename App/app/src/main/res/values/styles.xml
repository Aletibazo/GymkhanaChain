<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PrimaryTitle" >
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Description" >
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="PrefIcon" >
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="mapFAB" >
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
    </style>

    <style name="fab" >
        <item name="android:tint">@color/colorSecondaryLight</item>
    </style>

    <style name="drawerHeaderText" >
        <item name="android:textColor">@color/colorSecondaryLight</item>
    </style>

    <style name="roundImgCardView" >
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:elevation">12dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="roundImgImageView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
