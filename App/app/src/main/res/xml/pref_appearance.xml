<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="activate_dark_theme"
        android:title="@string/pref_title_activate_dark_theme" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="2"
        android:entries="@array/pref_map_theme_entries"
        android:entryValues="@array/pref_map_theme_values"
        android:key="map_theme_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_map_theme" />

</PreferenceScreen>